---
layout: base
---
.container
  .row
    .col-md-9
      ~ content
    .col-md-3
      .jumbotron(style="padding: 10px;")
        .text-center<
          %a.btn.btn-default.btn-lg(type="button" style="margin-top: 10px;"){:href => relative("/blog/news.atom")}
            %img{:src => relative("/headerFooter/atomFeedIcon.png"), :alt => 'Atom'}
            News feed
          .small(style="margin-top: 10px;")
            %span Don't want to miss a single blog post?
            %br
            %span Follow us on
          %ul.list-inline
            %li<
              %a(href="https://plus.google.com/+OptaPlannerOrg" rel="publisher" target="_blank" title="News stream via Google+")<
                %img{:src => relative("/headerFooter/googlePlusLogo.png"), :alt => "G+"}
            %li<
              %a(href="https://twitter.com/optaplanner" target="_blank" title="News stream via Twitter")<
                %img{:src => relative("/headerFooter/twitterLogo.png"), :alt => "T"}
            %li<
              %a(href="https://www.facebook.com/OptaPlanner" target="_blank" title="News stream via Facebook")<
                %img{:src => relative("/headerFooter/facebookLogo.png"), :alt => "Fb"}
          %a.btn.btn-default(type="button"){:href => relative("/blog/archive.html")}
            Blog archive
      = partial('latestBlogPosts.html.haml', :outputPage => page)
      = partial('events.html.haml', :outputPage => page)

